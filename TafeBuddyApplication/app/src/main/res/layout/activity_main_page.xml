<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:background="@drawable/tafebackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@android:color/transparent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainpage_toobar"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="TAFE Buddy System"
            app:titleMargin="10dp"
            android:textAlignment="viewEnd"
            app:titleTextColor="@color/colorAccent"
            app:subtitle="Prototype Test" />


    </android.support.design.widget.AppBarLayout>


    <ImageButton
        app:srcCompat="@android:color/transparent"
        android:id="@+id/btnAgenda"
        android:background="@drawable/ic_action_action_event"
        android:elevation="0dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="174dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnMap" />

    <ImageButton
        android:id="@+id/btnMap"
        android:background="@drawable/ic_action_ic_action_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="35dp"
        android:layout_alignTop="@+id/btnBookCounselling"
        android:layout_toStartOf="@+id/btnBookCounselling" />

    <ImageButton
        android:id="@+id/btnBookCounselling"
        android:background="@drawable/ic_action_ic_action_clock"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btnEmail"
        android:layout_alignStart="@+id/btnAccount" />

    <ImageButton

        android:id="@+id/btnAccount"
        android:background="@drawable/ic_action_action_account_balance"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/btnAgenda"
        android:layout_toStartOf="@+id/btnFAQPage" />

    <ImageButton
        android:id="@+id/btnEmail"
        android:background="@drawable/ic_action_ic_action_email"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnFAQPage"
        android:layout_alignStart="@+id/btnFAQPage" />

    <ImageButton
        android:id="@+id/btnFAQPage"
        android:background="@drawable/ic_action_notification_sms_failed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="58dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignTop="@+id/btnAccount"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="My Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/btnAccount"
        android:layout_alignStart="@+id/btnAccount"
        android:id="@+id/textView4" />

    <TextView
        android:text="FAQ"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/btnFAQPage"
        android:id="@+id/textView6"
        android:layout_width="60dp" />

    <TextView
        android:text="Email"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:layout_below="@+id/btnEmail"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7" />

    <TextView
        android:text="Agenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/btnAgenda" />

    <TextView
        android:text="Counselling Session"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:textSize="14sp"
        android:maxLines="2"
        android:lines="2"
        tools:text="Counselling\nSession"
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_below="@+id/btnBookCounselling"
        android:layout_toEndOf="@+id/btnMap" />

    <TextView
        android:text="Campus Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/textView3"
        android:layout_below="@+id/btnMap"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginEnd="23dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@android:color/transparent"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_width="wrap_content"
        android:scrollbars="horizontal"
        android:layout_alignParentStart="true"
        android:layout_height="150dp">
    </android.support.v7.widget.RecyclerView>

    />


</RelativeLayout>
