<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="programmingsolutions.tafebuddy.MainPage"
    android:background="@drawable/tafebackground">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_mapmode"
        android:layout_marginBottom="16dp"
        android:id="@+id/btnMap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_agenda"
        android:id="@+id/btnAgenda"
        android:layout_above="@+id/btnMap"
        android:layout_alignStart="@+id/btnMap"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_recent_history"
        android:id="@+id/btnBookCounselling"
        android:layout_alignTop="@+id/btnMap"
        android:layout_alignStart="@+id/btnCalendar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:id="@+id/btnCalendar"
        android:layout_alignTop="@+id/btnAgenda"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_slideshow"
        android:id="@+id/btnVideos"
        android:layout_alignTop="@+id/btnBookCounselling"
        android:layout_toEndOf="@+id/btnBookCounselling"
        android:layout_marginStart="42dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:id="@+id/btnFAQPage"
        android:layout_alignTop="@+id/btnCalendar"
        android:layout_alignStart="@+id/btnVideos" />
</RelativeLayout>
